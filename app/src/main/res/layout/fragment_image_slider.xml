<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/lbl_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonShare"
        android:layout_alignParentStart="true"
        android:layout_marginStart="122dp"
        android:textColor="@android:color/white"
        android:layout_toStartOf="@+id/buttonShare"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonShare"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonInfo"
        android:layout_marginEnd="116dp"
        android:background="@drawable/ic_share_white" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_info_white" />

</RelativeLayout>